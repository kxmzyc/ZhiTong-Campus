.container {
  background: var(--bg);
  min-height: 100vh;
  max-width: 430px;
  margin: 0 auto;
}

.nav {
  position: sticky;
  top: 0;
  z-index: 100;
  background: var(--surface-2);
  box-shadow: var(--shadow-sm);
}

.nav-inner {
  height: 56px;
  padding: 0 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-back {
  width: 36px;
  height: 36px;
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.65);
  border: 1px solid var(--border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: rgba(15, 23, 42, 0.7);
}

.nav-title {
  font-size: 16px;
  font-weight: 900;
  color: var(--text);
}

.nav-right {
  width: 36px;
  height: 36px;
}

.content {
  padding: 16px;
}

.card {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  padding: 16px;
  box-shadow: var(--shadow-sm);
}

.tip {
  font-size: 16px;
  font-weight: 900;
  color: var(--text);
}

.sub {
  margin-top: 10px;
  font-size: 13px;
  line-height: 1.5;
  color: var(--muted);
}
