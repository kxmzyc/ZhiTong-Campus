<view class="page">
  <view class="nav" style="padding-top: {{statusBarHeight}}px;">
    <view class="nav-inner">
      <view class="nav-back" bindtap="onBack">
        <text class="nav-back-icon">‹</text>
        <text class="nav-back-text">返回</text>
      </view>
      <view class="nav-title">积分充值</view>
      <view class="nav-right"></view>
    </view>
  </view>

  <view class="content">
    <scroll-view class="scroll" scroll-y="true">
      <view class="card">
        <view class="section-title">选择充值额度</view>
        <view class="recharge-grid">
          <view class="recharge-btn" wx:for="{{rechargeOptions}}" wx:key="amount" bindtap="onRechargeTap" data-amount="{{item.amount}}">
            <view class="recharge-amount">+{{item.amount}}</view>
            <view class="recharge-price">{{item.priceText}}</view>
          </view>
        </view>
      </view>

      <view class="safe-space"></view>
    </scroll-view>
  </view>
</view>
