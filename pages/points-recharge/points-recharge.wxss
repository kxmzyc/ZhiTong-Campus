.page {
  height: 100vh;
  max-width: 430px;
  margin: 0 auto;
  background: var(--bg);
  display: flex;
  flex-direction: column;
}

.nav {
  background: var(--surface-2);
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-inner {
  padding: 12px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-back {
  display: flex;
  align-items: center;
  gap: 6px;
  color: var(--muted);
}

.nav-back-icon {
  font-size: 20px;
  line-height: 1;
}

.nav-back-text {
  font-size: 14px;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text);
}

.nav-right {
  width: 44px;
}

.content {
  flex: 1;
  height: 0;
}

.scroll {
  height: 100%;
  padding: 16px;
  box-sizing: border-box;
}

.card {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  box-shadow: var(--shadow-sm);
  padding: 14px;
}

.section-title {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 12px;
}

.recharge-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.recharge-btn {
  border: 1px solid var(--glass-border);
  border-radius: 14px;
  padding: 12px 10px;
  background: var(--glass-2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.recharge-btn:active {
  transform: scale(0.99);
  background: var(--primary-soft);
}

.recharge-amount {
  font-size: 16px;
  font-weight: 700;
  color: var(--primary);
}

.recharge-price {
  margin-top: 6px;
  font-size: 11px;
  color: var(--muted);
}

.safe-space {
  height: 24px;
}
