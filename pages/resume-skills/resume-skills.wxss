.skills-page {
  height: 100vh;
  background: var(--bg);
  display: flex;
  flex-direction: column;
  max-width: 430px;
  margin: 0 auto;
}

.header {
  background: var(--surface-2);
  padding: 12px 20px;
  padding-top: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 300;
}

.user-avatar {
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translateY(-50%);
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  font-size: 14px;
}

.nav-container {
  display: flex;
  align-items: center;
  gap: 32px;
}

.nav-links {
  display: flex;
  gap: 24px;
}

.nav-link {
  color: var(--muted);
  font-size: 15px;
  padding: 6px 12px;
  border-radius: 8px;
  position: relative;
  font-weight: 500;
}

.nav-link.active {
  color: var(--primary);
  font-weight: 600;
}

.nav-link.active::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 3px;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  border-radius: 2px;
}

.header-right {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  width: 32px;
  height: 32px;
  border-radius: 50%;
}

.skills-nav {
  background: #ffffff;
  color: var(--text);
  border-bottom: 1px solid var(--border);
  position: sticky;
  top: 0;
  z-index: 300;
}

.skills-nav-inner {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;
}

.skills-nav-back {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 28px;
  line-height: 1;
}

.skills-nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  letter-spacing: 1px;
}

.skills-nav-right {
  width: 44px;
  height: 44px;
}

.skills-body {
  flex: 1;
  min-height: 0;
}

.skills-panel {
  margin: 14px;
  padding-bottom: 96px;
  box-sizing: border-box;
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 16px;
}

.tip-card {
  background: #ffffff;
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: 12px 14px;
  box-shadow: var(--shadow-xs);
}

.tip-text {
  font-size: 13px;
  line-height: 1.5;
  color: var(--muted);
  white-space: pre-line;
}

.form {
  background: #ffffff;
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.form-head {
  padding: 16px 16px 4px;
}

.form-title {
  font-size: 18px;
  font-weight: 900;
  color: var(--text);
}

.block {
  padding: 14px 16px 16px;
}

.block-label {
  font-size: 15px;
  font-weight: 800;
  color: rgba(15, 23, 42, 0.86);
}

.block-box {
  margin-top: 10px;
  border-radius: 16px;
  border: 1px solid rgba(15, 23, 42, 0.10);
  background: #ffffff;
  padding: 12px;
}

.block-input {
  width: 100%;
  min-height: 160px;
  font-size: 14px;
  line-height: 1.55;
  color: rgba(15, 23, 42, 0.82);
  box-sizing: border-box;
}

.divider {
  height: 1px;
  background: var(--fill-2);
  margin: 0 14px;
}

.field-error {
  margin: 6px 16px 0;
  font-size: 12px;
  line-height: 1.4;
  color: #ef4444;
}

.safe-space {
  height: 18px;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  padding: 12px 16px 18px;
  box-sizing: border-box;
  background: var(--bg);
  border-top: none;
  z-index: 1000;
}

.footer-inner {
  width: 100%;
  max-width: 430px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.btn {
  height: 48px;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: 900;
}

.btn-secondary {
  flex: 0 0 110px;
  background: rgba(15, 23, 42, 0.06);
  color: rgba(15, 23, 42, 0.65);
}

.btn-primary {
  flex: 1;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  color: #fff;
  box-shadow: var(--shadow-md);
}
