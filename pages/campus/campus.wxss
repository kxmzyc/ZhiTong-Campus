/* pages/campus/campus.wxss */
.container {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: var(--bg);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  max-width: 430px;
  margin: 0 auto;
  position: relative;
}

/* Header */
.header {
  background: var(--surface-2);
  padding: 12px 20px;
  padding-top: 44px; /* 为状态栏留出空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  position: sticky;
  top: 0;
  z-index: 100;
}

.user-avatar {
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translateY(-50%);
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  font-size: 14px;
}

.nav-container {
  display: flex;
  align-items: center;
  gap: 32px;
}

.home-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text);
  position: relative;
  padding: 4px 0;
}

.nav-links {
  display: flex;
  gap: 24px;
}

.nav-link {
  color: var(--muted);
  font-size: 15px;
  padding: 6px 12px;
  border-radius: 8px;
  position: relative;
  font-weight: 500;
}

.nav-link.active {
  color: var(--primary);
  font-weight: 600;
}

.nav-link.active::after {
  content: '';
  position: absolute;
  bottom: -2px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 3px;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  border-radius: 2px;
}

.header-right {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
  width: 32px;
  height: 32px;
  border-radius: 50%;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 200px;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* AI功能区域 */
.ai-section {
  display: flex;
  gap: 12px;
  padding: 0 16px;
  margin: 16px 0;
}

.ai-card {
  flex: 1;
  border-radius: 14px;
  padding: 14px 12px;
  color: var(--text);
  background: var(--surface);
  border: 1px solid var(--border);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  gap: 10px;
  min-height: 86px;
  transition: all 0.3s ease;
}

.ai-card--select {
  background: var(--surface);
}

.ai-card--auto {
  background: var(--surface);
  border: 1px solid var(--border);
}

.ai-card:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.ai-icon-wrap {
  width: 44px;
  height: 44px;
  border-radius: 14px;
  background: var(--primary-soft);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.ai-text {
  flex: 1;
  min-width: 0;
}

.ai-title {
  font-size: 15px;
  font-weight: 700;
  color: var(--text);
  line-height: 1.2;
  margin-bottom: 6px;
}

.ai-desc {
  font-size: 12px;
  color: var(--muted);
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 二级导航栏 */
.sub-nav {
  display: flex;
  padding: 16px;
  background: var(--surface);
  margin: 0 16px 16px;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.sub-nav-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: var(--muted);
  padding: 8px 4px;
  border-radius: 8px;
  transition: all 0.2s ease;
}

.sub-nav-item.active {
  color: var(--primary);
  background: var(--primary-soft);
  font-weight: 600;
}

/* 筛选器 */
.filter-section {
  margin: 0 16px 16px;
  padding: 12px;
  background: var(--surface-2);
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.filter-bar {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 0;
}

.filter-pills {
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
}

.filter-pill {
  flex: 1;
  min-width: 0;
  height: 40px;
  padding: 0 12px;
  background: var(--fill);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  border: 1px solid var(--border);
  transition: background 0.18s ease, border-color 0.18s ease, box-shadow 0.18s ease, transform 0.12s ease;
}

.filter-pill--active {
  background: var(--primary-soft);
  border: 1px solid var(--primary-border);
  box-shadow: var(--shadow-sm);
}

.filter-pill--active .filter-pill-text {
  color: var(--primary);
  font-weight: 700;
}

.filter-pill--active .filter-pill-arrow {
  border-top-color: var(--primary);
}

.filter-pill:active {
  transform: scale(0.99);
}

.filter-pill-text {
  font-size: 14px;
  color: var(--muted);
  max-width: 90px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.filter-pill-arrow {
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 5px solid var(--subtle);
}

.filter-search-row {
  width: 100%;
}

.search-box {
  width: 100%;
  height: 42px;
  background: var(--fill);
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 12px;
  gap: 8px;
}

.search-icon {
  width: 18px;
  height: 18px;
  flex: 0 0 auto;
  position: relative;
  opacity: 0.75;
}

.search-icon::before {
  content: '';
  position: absolute;
  left: 1px;
  top: 1px;
  width: 10px;
  height: 10px;
  border: 2px solid var(--subtle);
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  left: 11px;
  top: 12px;
  width: 7px;
  height: 2px;
  background: var(--subtle);
  border-radius: 2px;
  transform: rotate(45deg);
  transform-origin: left center;
}

.search-input {
  flex: 1;
  min-width: 0;
  width: 0;
  font-size: 14px;
  color: var(--text);
}

.filter-group {
  margin-bottom: 16px;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8px;
  display: block;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-option {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  color: var(--muted);
  background: var(--fill);
  transition: all 0.2s ease;
}

.filter-option.active {
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  color: white;
}

/* 公司卡片列表 */
.company-list {
  padding: 0 16px 16px;
}

.company-card {
  background: var(--surface);
  border-radius: var(--radius-sm);
  padding: 16px;
  margin-bottom: 12px;
  display: flex;
  align-items: flex-start;
  gap: 12px;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.company-card:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.company-logo {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  background: var(--fill);
  flex-shrink: 0;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 4px;
}

.company-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  margin-bottom: 8px;
}

.tag {
  padding: 2px 6px;
  background: var(--primary-soft);
  color: var(--primary);
  border-radius: 4px;
  font-size: 10px;
}

.company-desc {
  font-size: 12px;
  color: var(--muted);
  line-height: 1.4;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.job-count {
  font-size: 12px;
  color: var(--primary);
  font-weight: 500;
}