/* 容器 */
.preview-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(139, 92, 246, 0.95);
  backdrop-filter: blur(10px);
  z-index: 1000;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
}

.navbar-left,
.navbar-right {
  width: 120rpx;
}

.navbar-right {
  text-align: right;
}

.back-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.edit-btn {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 24rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* 滚动区域 */
.resume-scroll {
  flex: 1;
  padding: 120rpx 32rpx 180rpx;
}

/* 简历纸张 */
.resume-paper {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

/* 简历头部 */
.resume-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 40rpx;
  color: #ffffff;
}

.header-name {
  font-size: 56rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 24rpx;
  letter-spacing: 2rpx;
}

.header-divider {
  width: 120rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 3rpx;
  margin: 0 auto 32rpx;
}

.header-info {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx 32rpx;
  justify-content: center;
  margin-bottom: 16rpx;
}

.header-info:last-child {
  margin-bottom: 0;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
}

.info-icon {
  font-size: 28rpx;
}

.info-text {
  font-weight: 400;
}

/* 简历区块 */
.resume-section {
  padding: 48rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.resume-section:last-child {
  border-bottom: none;
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.section-icon {
  font-size: 40rpx;
  line-height: 1;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  white-space: nowrap;
}

.section-line {
  flex: 1;
  height: 4rpx;
  background: linear-gradient(to right, #e5e7eb, transparent);
  border-radius: 2rpx;
}

/* 区块内容 */
.section-content {
  position: relative;
}

/* 时间轴样式 */
.timeline-item {
  position: relative;
  padding-left: 48rpx;
  padding-bottom: 40rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 14rpx;
  top: 32rpx;
  bottom: -8rpx;
  width: 2rpx;
  background: linear-gradient(to bottom, #e5e7eb, transparent);
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 28rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 0 2rpx #e5e7eb;
}

.timeline-content {
  flex: 1;
}

/* 列表项 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.item-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.item-date {
  font-size: 24rpx;
  color: #9ca3af;
  white-space: nowrap;
  line-height: 1.4;
  padding-top: 4rpx;
}

.item-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.item-desc {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 文本内容 */
.text-content {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #9ca3af;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #d1d5db;
}

/* 底部安全区域 */
.safe-bottom {
  height: 40rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.action-btn.secondary {
  background: #f3f4f6;
  color: #6b7280;
}

.btn-icon {
  font-size: 36rpx;
}
