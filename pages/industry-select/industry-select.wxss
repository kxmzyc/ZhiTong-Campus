.city-page {
  height: 100vh;
  background: var(--bg);
  display: flex;
  flex-direction: column;
}

.city-panel {
  margin: 14px;
  background: var(--surface);
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.city-nav {
  background: var(--surface-2);
  color: var(--text);
  border-bottom: 1px solid var(--border);
}

.city-nav-inner {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;
}

.city-nav-back {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.city-nav-back-icon {
  font-size: 28px;
  line-height: 1;
}

.city-nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  letter-spacing: 1px;
}

.city-nav-right {
  width: 44px;
  height: 44px;
}

.city-top {
  background: var(--surface-2);
}

.city-search {
  padding: 12px 16px;
}

.search-box {
  width: 100%;
  height: 42px;
  background: rgba(17, 24, 39, 0.04);
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 12px;
  gap: 8px;
}

.search-icon {
  width: 18px;
  height: 18px;
  flex: 0 0 auto;
  position: relative;
  opacity: 0.75;
}

.search-icon::before {
  content: '';
  position: absolute;
  left: 1px;
  top: 1px;
  width: 10px;
  height: 10px;
  border: 2px solid rgba(107, 114, 128, 0.9);
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  left: 11px;
  top: 12px;
  width: 7px;
  height: 2px;
  background: rgba(107, 114, 128, 0.9);
  border-radius: 2px;
  transform: rotate(45deg);
  transform-origin: left center;
}

.search-input {
  flex: 1;
  min-width: 0;
  width: 0;
  font-size: 14px;
  color: var(--text);
}

.city-cart {
  padding: 0 16px 12px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12px;
}

.city-cart-scroll {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
}

.city-cart-list {
  display: inline-flex;
  flex-wrap: nowrap;
  gap: 10px;
  padding: 0 2px;
}

.city-cart-item {
  position: relative;
  min-width: 86px;
  max-width: 140px;
  padding: 10px 30px 10px 12px;
  border-radius: 10px;
  background: var(--primary-soft);
  border: 1px solid rgba(109, 93, 246, 0.30);
  color: var(--primary);
}

.city-cart-text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  font-weight: 600;
}

.city-cart-remove {
  position: absolute;
  top: 6px;
  right: 8px;
  width: 18px;
  height: 18px;
  border-radius: 9px;
  color: rgba(17, 24, 39, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.city-cart-count {
  flex: 0 0 auto;
  padding-top: 12px;
  color: var(--muted);
  font-size: 14px;
}

.city-body {
  flex: 1;
  display: flex;
  min-height: 0;
}

.city-bottom {
  padding: 12px 16px;
  background: var(--surface-2);
  border-top: 1px solid var(--border);
}

.city-confirm-btn {
  width: 100%;
  height: 44px;
  border-radius: 12px;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  color: #ffffff;
  font-size: 16px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.city-confirm-btn:active {
  transform: scale(0.99);
}

.city-left {
  width: 34%;
  background: rgba(17, 24, 39, 0.03);
}

.city-left-item {
  padding: 16px 14px;
  color: var(--muted);
  font-size: 15px;
}

.city-left-item.active {
  background: var(--surface);
  color: var(--text);
  font-weight: 700;
  border-left: 3px solid var(--primary);
}

.city-right {
  background: var(--surface);
  height: 100%;
}

.city-right-wrap {
  flex: 1;
  min-height: 0;
}

.city-swiper {
  height: 100%;
}

.city-grid {
  padding: 16px 14px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 12px;
  grid-row-gap: 12px;
}

.city-chip {
  width: auto;
  background: rgba(17, 24, 39, 0.04);
  border-radius: 10px;
  padding: 14px 10px;
  text-align: center;
  color: rgba(55, 65, 81, 0.96);
  font-size: 15px;
}

.city-chip:active {
  transform: scale(0.98);
}

.city-chip.selected {
  background: var(--primary-soft);
  color: var(--primary);
  font-weight: 700;
}
