.page {
  height: 100vh;
  background: var(--bg);
  display: flex;
  flex-direction: column;
}

.nav {
  background: var(--surface-2);
  color: var(--text);
  border-bottom: 1px solid var(--border);
}

.nav-inner {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;
}

.nav-back {
  width: 88px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 4px;
}

.nav-back-icon {
  font-size: 28px;
  line-height: 1;
}

.nav-back-text {
  font-size: 16px;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  letter-spacing: 1px;
}

.nav-right {
  width: 88px;
  height: 44px;
}

.content {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.scroll {
  flex: 1;
  min-height: 0;
}

.card {
  margin: 14px 14px 0;
  background: #ffffff;
  border: 1px solid var(--border);
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.section-title {
  padding: 14px 14px 8px;
  font-size: 16px;
  font-weight: 700;
  color: var(--text);
}

.row {
  padding: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.row--avatar {
  align-items: flex-start;
}

.row-label {
  flex: 0 0 auto;
  width: 84px;
  color: var(--muted);
  font-size: 15px;
}

.row-right {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 10px;
}

.row-value {
  max-width: 230px;
  text-align: right;
  color: var(--text);
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.row-value--placeholder {
  color: var(--subtle);
}

.row-chips {
  padding: 0 14px 14px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: flex-end;
}

.row-chip {
  max-width: 100%;
  padding: 6px 10px;
  border-radius: 16px;
  background: var(--fill);
  color: var(--muted);
  font-size: 12px;
  line-height: 1.2;
}

.row-input {
  flex: 1;
  min-width: 0;
  text-align: right;
  font-size: 15px;
  color: var(--text);
}

.row-arrow {
  flex: 0 0 auto;
  font-size: 22px;
  color: var(--muted);
}

.divider {
  height: 1px;
  background: var(--fill-2);
  margin: 0 14px;
}

.avatar {
  width: 54px;
  height: 54px;
  border-radius: 27px;
  overflow: hidden;
  background: var(--fill-2);
}

.avatar-img {
  width: 54px;
  height: 54px;
}

.avatar-placeholder {
  width: 54px;
  height: 54px;
  background: var(--fill);
}

.safe-space {
  height: 18px;
}

.bottom {
  padding: 12px 16px;
  background: var(--surface-2);
  border-top: 1px solid var(--border);
}

.save-btn {
  width: 100%;
  height: 44px;
  border-radius: 12px;
  background: linear-gradient(135deg, var(--primary), var(--primary-2));
  color: #ffffff;
  font-size: 16px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: scale(0.99);
}

.sheet-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: var(--overlay);
  display: flex;
  align-items: flex-end;
  z-index: 999;
}

.sheet {
  width: 100%;
  background: #ffffff;
  border-top: 1px solid var(--border);
  border-top-left-radius: 18px;
  border-top-right-radius: 18px;
  overflow: hidden;
  height: 66vh;
  max-height: 72vh;
  display: flex;
  flex-direction: column;
}

.sheet-header {
  height: 52px;
  padding: 0 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid var(--border);
  background: #ffffff;
}

.sheet-header--plain {
  justify-content: space-between;
}

.sheet-cancel {
  width: 60px;
  color: var(--muted);
  font-size: 15px;
}

.sheet-confirm {
  width: 60px;
  text-align: right;
  color: var(--primary);
  font-size: 15px;
  font-weight: 700;
}

.sheet-cancel--ghost,
.sheet-confirm--ghost {
  opacity: 0;
}

.sheet-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 700;
  color: var(--text);
}

.sheet-body {
  flex: 1;
  min-height: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker {
  width: 100%;
  height: 320px;
}

.picker-item {
  height: 48px;
  line-height: 48px;
  text-align: center;
  color: var(--text);
}

.sheet-list {
  flex: 1;
  min-height: 0;
}

.sheet-scroll {
  height: 100%;
}

.sheet-list-item {
  padding: 16px 16px;
  font-size: 15px;
  color: var(--text);
  border-bottom: 1px solid var(--border);
  background: #ffffff;
}

.sheet-list-item:active {
  background: var(--fill);
}

.sheet-major {
  flex: 1;
  min-height: 0;
}

.major-body {
  height: 100%;
  display: flex;
}

.major-left {
  width: 34%;
  background: #ffffff;
}

.major-left-item {
  padding: 16px 14px;
  color: var(--muted);
  font-size: 15px;
}

.major-left-item.active {
  background: var(--surface);
  color: var(--text);
  font-weight: 700;
  border-left: 3px solid var(--primary);
}

.major-right {
  flex: 1;
  min-height: 0;
  background: #ffffff;
}

.major-grid {
  padding: 16px 14px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 12px;
  grid-row-gap: 12px;
}

.major-chip {
  background: var(--fill);
  border-radius: 10px;
  padding: 14px 10px;
  text-align: center;
  color: var(--text);
  font-size: 15px;
}

.major-chip:active {
  transform: scale(0.98);
}

.sheet-select {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.select-search {
  padding: 12px 16px;
  background: var(--surface-2);
  border-bottom: 1px solid var(--border);
}

.search-box {
  width: 100%;
  height: 42px;
  background: var(--fill);
  border-radius: 12px;
  display: flex;
  align-items: center;
  padding: 0 12px;
  gap: 8px;
}

.search-icon {
  width: 18px;
  height: 18px;
  flex: 0 0 auto;
  position: relative;
  opacity: 0.75;
}

.search-icon::before {
  content: '';
  position: absolute;
  left: 1px;
  top: 1px;
  width: 10px;
  height: 10px;
  border: 2px solid var(--subtle);
  border-radius: 50%;
}

.search-icon::after {
  content: '';
  position: absolute;
  left: 11px;
  top: 12px;
  width: 7px;
  height: 2px;
  background: var(--subtle);
  border-radius: 2px;
  transform: rotate(45deg);
  transform-origin: left center;
}

.search-input {
  flex: 1;
  min-width: 0;
  width: 0;
  font-size: 14px;
  color: var(--text);
}

.select-cart {
  padding: 12px 16px 10px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12px;
  border-bottom: 1px solid var(--border);
}

.select-cart-scroll {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
}

.select-cart-list {
  display: inline-flex;
  flex-wrap: nowrap;
  gap: 10px;
  padding: 0 2px;
}

.select-cart-item {
  position: relative;
  min-width: 86px;
  max-width: 140px;
  padding: 10px 30px 10px 12px;
  border-radius: 10px;
  background: var(--primary-soft);
  border: 1px solid var(--primary-border);
  color: var(--primary);
}

.select-cart-text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  font-weight: 600;
}

.select-cart-remove {
  position: absolute;
  top: 6px;
  right: 8px;
  width: 18px;
  height: 18px;
  border-radius: 9px;
  color: var(--subtle);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.select-cart-count {
  flex: 0 0 auto;
  padding-top: 12px;
  color: var(--muted);
  font-size: 14px;
}

.select-body {
  flex: 1;
  min-height: 0;
  display: flex;
}

.select-left {
  width: 34%;
  background: var(--fill);
}

.select-left-item {
  padding: 16px 14px;
  color: var(--muted);
  font-size: 15px;
}

.select-left-item.active {
  background: var(--surface);
  color: var(--text);
  font-weight: 700;
  border-left: 3px solid var(--primary);
}

.select-right {
  flex: 1;
  min-height: 0;
  background: var(--surface);
}

.select-grid {
  padding: 16px 14px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-column-gap: 12px;
  grid-row-gap: 12px;
}

.select-chip {
  width: auto;
  background: var(--fill);
  border-radius: 10px;
  padding: 14px 10px;
  text-align: center;
  color: var(--text);
  font-size: 15px;
}

.select-chip:active {
  transform: scale(0.98);
}

.select-chip.selected {
  background: var(--primary-soft);
  color: var(--primary);
  font-weight: 700;
}
