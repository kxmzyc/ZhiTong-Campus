/* pages/job-detail/job-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #fff;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.placeholder {
  width: 60rpx;
}

/* 职位信息卡片 */
.job-info-card {
  background-color: #fff;
  padding: 40rpx 32rpx;
  margin-bottom: 20rpx;
}

.job-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.job-salary {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6a00;
  margin-bottom: 24rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  border-radius: 8rpx;
}

/* 公司信息卡片 */
.company-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.company-logo {
  width: 96rpx;
  height: 96rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.company-desc {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 内容区块 */
.section {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.section-content {
  line-height: 1.8;
}

.description {
  font-size: 28rpx;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 技能标签 */
.skill-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.skill-tag {
  padding: 12rpx 24rpx;
  background-color: #e8f4ff;
  color: #0052d9;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: 1rpx solid #b3d8ff;
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-chat {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #0052d9;
  border: 2rpx solid #0052d9;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-apply {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #0052d9 0%, #0041a8 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-chat::after,
.btn-apply::after {
  border: none;
}
