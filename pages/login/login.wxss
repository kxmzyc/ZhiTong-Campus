/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 32rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 表单区域 */
.form-section {
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 头像选择 */
.avatar-button {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  padding: 0;
  border: none;
  background: transparent;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-button::after {
  border: none;
}

.avatar-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  background: #f5f5f5;
}

.avatar-tip {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  color: #ffffff;
  font-size: 24rpx;
}

.avatar-tip .iconfont {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

/* 昵称输入 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

.nickname-input::placeholder {
  color: #999999;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.login-button::after {
  border: none;
}

.login-button.loading {
  opacity: 0.7;
}

.login-button[disabled] {
  opacity: 0.7;
}

/* 底部提示 */
.footer-section {
  margin-top: auto;
  padding-top: 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.footer-link {
  font-size: 24rpx;
  color: #ffffff;
  text-decoration: underline;
  margin: 0 4rpx;
}
